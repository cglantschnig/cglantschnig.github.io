---
export interface Props {
  title: string;
}

const { title } = Astro.props;
const year = (new Date()).getFullYear();
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="main-menu">
      <ul>
        <li><a href="#home">Home</a></li>
        <li><a href="#portfolio">Portfolio</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </header>
    <slot />
    <footer class="footer">
      <p>Copy right @ {year}</p>
    </footer>
  </body>
</html>
<style lang="scss">
  :root {
    --error-color: red;
    
    --section-1-bg: hsl(47, 91%, 82%);
    --section-1-color: hsl(47, 91%, 15%);

    --section-2-bg: #F4976C;
    --section-3-bg: #303C6C;
    --section-4-bg: #B4DFE5;
    --section-5-bg: #D2FDFF;
  }

  html {
    font-family: system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
  }

  .main-menu {
    position: fixed;
    width: 100%;
    ul {
      display: flex;
      justify-content: center;
      margin: 0;
      padding: 0;
      height: 2em;
      background-color: hsl(0, 0%, 100%);;
      opacity: 0.8;
      li {
        display: block;
        a {
          display: block;
          text-decoration: none;
          color: hsl(0, 0%, 20%);
          line-height: 2em;
          padding-inline: 1em;

          &:hover, &:active {
          animation: color_change 1s;
          background-color: hsl(0, 0%, 90%);
        }
        }
      }
    }
  }

  .footer {
    display: grid;
    place-items: center;
    height: 3em;
    text-align: center;
    background-color: black;
    color: white;
    p {
      margin: 0;
    }
  }

</style>
